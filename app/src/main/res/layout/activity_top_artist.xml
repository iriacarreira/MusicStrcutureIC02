<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context="com.example.android.musicstrcutureic02.TopArtistActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_size"
            android:src="@drawable/top" />

        <TextView
            android:text="@string/top_artist"
            style="@style/explanation">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/space_size">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/lineSize"
            android:background="@color/colorPrimary600" />


        <TextView
            android:id="@+id/play_artist"
            android:drawableLeft="@drawable/artisttop"
            android:text="@string/artist_list"
            style="@style/list_text"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/lineSize"
            android:background="@color/colorPrimary600" />


        <TextView
            android:id="@+id/play_artist2"
            android:drawableLeft="@drawable/artisttop"
            android:text="@string/artist_list"
            style="@style/list_text"
/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/lineSize"
            android:background="@color/colorPrimary600" />


        <TextView
            android:id="@+id/play_artist3"
            android:drawableLeft="@drawable/artisttop"
            android:text="@string/artist_list"
            style="@style/list_text"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/lineSize"
            android:background="@color/colorPrimary600" />


        <TextView
            android:id="@+id/play_artist4"
            android:drawableLeft="@drawable/artisttop"
            android:text="@string/artist_list"
            style="@style/list_text"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/lineSize"
            android:background="@color/colorPrimary600" />


        <TextView
            android:id="@+id/play_artist5"
            android:drawableLeft="@drawable/artisttop"
            android:text="@string/artist_list"
            style="@style/list_text"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/lineSize"
            android:background="@color/colorPrimary600" />

    </LinearLayout>
</LinearLayout>
